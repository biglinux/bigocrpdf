#!/bin/bash

#Translation
export TEXTDOMAINDIR="/usr/share/locale"
export TEXTDOMAIN=bigocrpdf

mkdir -p ~/.config/bigocrpdf

rm -f ~/.config/bigocrpdf/selected-file

while (( $# > 0 ))    # or [ $# -gt 0 ]
do
    echo "$1" >> ~/.config/bigocrpdf/selected-file
    shift
done

cd /usr/share/bigbashview/bcc/apps/bigocrpdf/

LANGUAGE=$BIGBASHVIEW_LANG QT_QPA_PLATFORM=xcb SDL_VIDEODRIVER=x11 WINIT_UNIX_BACKEND=x11 GDK_BACKEND=x11 bigbashview index.sh.htm -s 1050x600 -i icon-big-ocr-pdf.svg -n $"Torne seu PDF pesquis√°vel"
